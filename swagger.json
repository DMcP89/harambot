{
  "openapi": "3.0.0",
  "info": {
    "title": "Harambot API",
    "description": "API for configuring Harambot and retrieving fantasy sports data.",
    "version": "1.0.0"
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "X-API-Key"
      }
    },
    "schemas": {
      "GuildConfig": {
        "type": "object",
        "properties": {
          "league_id": {
            "type": "string"
          },
          "league_type": {
            "type": "string"
          },
          "RIP_text": {
            "type": "string"
          },
          "RIP_image_url": {
            "type": "string"
          }
        }
      },
      "GuildConfigUpdate": {
        "type": "object",
        "properties": {
          "league_id": {
            "type": "string"
          },
          "league_type": {
            "type": "string"
          },
          "RIP_text": {
            "type": "string"
          },
          "RIP_image_url": {
            "type": "string"
          },
          "yahoo_token": {
            "type": "string",
            "description": "Required when creating a new guild configuration."
          }
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string"
          }
        }
      },
      "SuccessMessage": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/status": {
      "get": {
        "summary": "Check bot status",
        "responses": {
          "200": {
            "description": "Bot status and latency",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/api/config/{guild_id}": {
      "security": [
        {
          "ApiKeyAuth": []
        }
      ],
      "parameters": [
        {
          "name": "guild_id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get guild configuration",
        "responses": {
          "200": {
            "description": "Current configuration",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GuildConfig"
                }
              }
            }
          },
          "404": {
            "description": "Guild not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Update or create guild configuration",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GuildConfigUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SuccessMessage"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request (e.g., Auth failure)",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Guild not found and no token provided",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/scoreboard/{guild_id}": {
      "security": [
        {
          "ApiKeyAuth": []
        }
      ],
      "parameters": [
        {
          "name": "guild_id",
          "in": "path",
          "required": true,
          "schema": {
            "type": "string"
          }
        }
      ],
      "get": {
        "summary": "Get scoreboard matchups",
        "responses": {
          "200": {
            "description": "Matchups list",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "matchups": {
                      "type": "array",
                      "items": {
                        "type": "object"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Guild not found or Yahoo API error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  }
}
